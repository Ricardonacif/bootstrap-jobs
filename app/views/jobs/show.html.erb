<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @job.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @job.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:filled) %>:</strong></dt>
  <dd><%= @job.filled %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @job.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
  <dd><%= @job.website %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_email) %>:</strong></dt>
  <dd><%= @job.contact_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @job.user_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Voltar",
              jobs_path, :class => 'btn'  %>
  <%if user_signed_in? && @job.user_id.to_i == current_user.try(:id) %>

    <%= link_to "Editar",
                edit_job_path(@job), :class => 'btn' %>
    <%= link_to "Excluir",
                job_path(@job),
                :method => 'delete',
                :data => { :confirm => "Tem certeza que deseja excluir?" },
                :class => 'btn btn-danger' %>
  <%end%>                
</div>
